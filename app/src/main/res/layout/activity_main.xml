<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.davidburgos.calculator.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/calculator_first_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="0" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/calculator_operators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/array_operators"
            android:gravity="center" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/calculator_second_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="0" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/calculator_default_padding"
            android:text="@string/calculator_equals" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/calculator_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/calculator_default_padding"
            android:text="0" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/calculator_solve_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculator_solve_title" />

</LinearLayout>
